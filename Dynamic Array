#include<iostream>
using namespace std;

void insertatbeg(int N,int a[])
{
	for (int i=N;i<N;i--)
	{
		a[i] = a[i-1];
	}
	cout<<"After"<<endl;
	for(int i=0;i<N;i++)
	{
		cout<<"Number "<<i+1<<" : is"<<a[i];
	}
}


int main()
{
	int N;
	int a[] = {};
	int *p;
	p = new int a[];
	cout<<"Enter the size of the array"<<endl;
	cin>>N;
	p = a[N];
	for (int j=0;j<N;j++)
	{
		cout<<"Enter number "<<j+1<<endl;
